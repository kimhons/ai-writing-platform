{
  "name": "writecrew-word-addin",
  "version": "1.0.0",
  "description": "WriteCrew - Multi-Agentic AI Writing Assistant for Microsoft Word",
  "main": "src/taskpane/taskpane.js",
  "scripts": {
    "start": "webpack serve --config webpack.dev.config.js --mode development",
    "build": "webpack --config webpack.prod.config.js --mode production",
    "build:analyze": "webpack --config webpack.prod.config.js --mode production --env analyze",
    "build:staging": "cross-env NODE_ENV=staging webpack --config webpack.prod.config.js --mode production",
    "test": "node tests/test-runner.js test",
    "test:ci": "node tests/test-runner.js ci",
    "test:performance": "node tests/test-runner.js performance",
    "test:memory": "node tests/test-runner.js memory",
    "test:watch": "nodemon --exec \"npm run test\"",
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src/ --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,css,scss,json}\"",
    "validate": "npm run lint && npm run test && npm run build",
    "clean": "rimraf dist",
    "serve": "http-server dist -p 3000 -c-1",
    "deploy:dev": "npm run build && npm run deploy:azure:dev",
    "deploy:staging": "npm run build:staging && npm run deploy:azure:staging",
    "deploy:prod": "npm run build && npm run deploy:azure:prod",
    "deploy:azure:dev": "az storage blob upload-batch -d '$web' -s dist --account-name writecrewdev",
    "deploy:azure:staging": "az storage blob upload-batch -d '$web' -s dist --account-name writecrewstaging",
    "deploy:azure:prod": "az storage blob upload-batch -d '$web' -s dist --account-name writecrewprod",
    "sideload": "office-addin-dev-certs install && office-addin sideload manifest.xml",
    "validate-manifest": "office-addin-manifest validate manifest.xml",
    "package": "npm run build && npm run package:zip",
    "package:zip": "cd dist && zip -r ../writecrew-word-addin.zip .",
    "security:audit": "npm audit --audit-level moderate",
    "security:fix": "npm audit fix",
    "precommit": "npm run lint && npm run test",
    "prepush": "npm run validate",
    "postinstall": "office-addin-dev-certs install --machine"
  },
  "keywords": [
    "office-addin",
    "word-addin",
    "ai-writing",
    "multi-agent",
    "crewai",
    "writing-assistant",
    "microsoft-office"
  ],
  "author": "WriteCrew Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kimhons/ai-writing-platform.git"
  },
  "bugs": {
    "url": "https://github.com/kimhons/ai-writing-platform/issues"
  },
  "homepage": "https://writecrew.app",
  "dependencies": {
    "@fluentui/react": "^8.110.0",
    "@fluentui/react-icons": "^2.0.220",
    "@microsoft/office-js": "^1.1.85",
    "@microsoft/office-js-helpers": "^1.0.1",
    "axios": "^1.6.0",
    "lodash": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "socket.io-client": "^4.7.4",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-object-rest-spread": "^7.20.7",
    "@babel/plugin-transform-runtime": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-react": "^7.22.0",
    "@babel/preset-typescript": "^7.23.0",
    "@types/lodash": "^4.14.200",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/uuid": "^9.0.6",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "autoprefixer": "^10.4.16",
    "babel-loader": "^9.1.3",
    "buffer": "^6.0.3",
    "clean-webpack-plugin": "^4.0.0",
    "compression-webpack-plugin": "^10.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "core-js": "^3.33.0",
    "cross-env": "^7.0.3",
    "crypto-browserify": "^3.12.0",
    "css-loader": "^6.8.1",
    "css-minimizer-webpack-plugin": "^5.0.1",
    "cssnano": "^6.0.1",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "html-webpack-plugin": "^5.5.3",
    "http-server": "^14.1.1",
    "mini-css-extract-plugin": "^2.7.6",
    "nodemon": "^3.0.1",
    "null-loader": "^4.0.1",
    "office-addin-cli": "^1.5.6",
    "office-addin-dev-certs": "^1.11.3",
    "office-addin-lint": "^2.2.5",
    "office-addin-manifest": "^1.12.3",
    "postcss": "^8.4.31",
    "postcss-loader": "^7.3.3",
    "prettier": "^3.0.3",
    "querystring-es3": "^0.2.1",
    "rimraf": "^5.0.5",
    "sass": "^1.69.5",
    "sass-loader": "^13.3.2",
    "stream-browserify": "^3.0.0",
    "style-loader": "^3.3.3",
    "terser-webpack-plugin": "^5.3.9",
    "typescript": "^5.2.2",
    "url": "^0.11.3",
    "util": "^0.12.5",
    "webpack": "^5.89.0",
    "webpack-bundle-analyzer": "^4.9.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "ie >= 11"
  ],
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "@typescript-eslint/recommended",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "react",
      "react-hooks",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error",
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/no-explicit-any": "warn",
      "react/prop-types": "off",
      "react/react-in-jsx-scope": "off"
    },
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run precommit",
      "pre-push": "npm run prepush"
    }
  }
}

